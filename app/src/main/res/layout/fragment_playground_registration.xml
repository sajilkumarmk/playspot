<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlaygroundRegistrationFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/playgroundregname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:hint="Name"/>
    <Spinner
        android:id="@+id/playgroundregtype"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/playgroundregplace"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:hint="Place"/>
    <Spinner
        android:id="@+id/playgroundregdistrict"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/playgroundregstate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:hint="State"/>
    <EditText
        android:id="@+id/playgroundregphone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:inputType="phone"
        android:hint="Phone"/>
    <EditText
        android:id="@+id/playgroundregemail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:hint="Email"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/playgroundregimagename"
            android:layout_width="0dp"
            android:layout_height="45dp"
                android:layout_weight="3"
            android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
            android:textSize="15sp"
                android:hint="Upload ID_Proof"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/login_edittext_bg"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playgroundregupload"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_bg"
                android:elevation="10dp"
                android:textColor="@color/white_100"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:text="Upload"/>
        </LinearLayout>
    <EditText
        android:id="@+id/playgroundregpassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_edittext_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:hint="Password"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playgroundregbutton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"
        android:paddingLeft="15dp"
        android:elevation="10dp"
        android:textColor="@color/white_100"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        android:text="Register"/>
    <LinearLayout
        android:id="@+id/playgroundregback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login"
            android:fontFamily="@font/poppins_regular"
            android:textSize="10sp"
            android:textColor="@color/green_primary"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>