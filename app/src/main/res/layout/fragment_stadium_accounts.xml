<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stadium.StadumAccounts.StadiumAccountsFragment">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sAccountsTab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/green_primary"
        app:tabSelectedTextColor="@color/green_primary"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/sAccountsViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>